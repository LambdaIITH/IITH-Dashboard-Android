<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/timetablelinear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_TT"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:cardBackgroundColor="@color/brandedsurface"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/courseCodeID"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:padding="4dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/courseNameID"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="Course Name"
                android:inputType="textPersonName"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/saver"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_gravity="start"
                android:text="save"
                android:textSize="9dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/DeleteCourse"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Delete"
                android:textSize="9dp"
                android:visibility="gone" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/DayCard"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/brandedsurface"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <TextView
            android:id="@+id/day"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:foregroundGravity="center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:padding="4dp"
            android:text="MON"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/timecard"
        android:layout_width="35dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/brandedsurface"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <TextView
            android:id="@+id/timeText"
            android:layout_width="35dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:text="9 to 10"
            android:textAlignment="center"
            android:textSize="12sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/blank"
        android:layout_width="35dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/brandedsurface"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp" />
</LinearLayout>
